{
  "name": "dashboard-avocado-backend",
  "version": "1.0.0",
  "description": "Backend API for Dashboard Avocado Agricultural Management System",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "build": "tsc",
    "build:clean": "rimraf dist && tsc",
    "build:prod": "npm run build:clean && NODE_ENV=production node dist/server.js",
    "test": "npm run test:unit",
    "test:unit": "mocha -r ts-node/register \"test/simpleAuth.test.ts\" --timeout 5000 --exit",
    "test:e2e": "mocha -r ts-node/register \"test/api.test.ts\" --timeout 10000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IshKevin/dash-api.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "typescript",
    "agriculture",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IshKevin/dash-api/issues"
  },
  "homepage": "https://github.com/IshKevin/dash-api#readme",
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "qrcode": "^1.5.4",
    "resend": "^6.5.2",
    "winston": "^3.19.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^5.2.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "chai": "^6.0.1",
    "mocha": "^11.7.2",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
